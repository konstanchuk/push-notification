<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Konstanchuk_PushNotification::manage" title="Push Notification Manage"
                          sortOrder="100">
                    <resource id="Konstanchuk_PushNotification::manage_template" title="Manage Templates"
                              sortOrder="10"/>
                    <resource id="Konstanchuk_PushNotification::manage_user" title="Manage Users"
                              sortOrder="20"/>
                    <resource id="Konstanchuk_PushNotification::manage_process" title="Manage Process"
                              sortOrder="30"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>